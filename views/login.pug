include layout/user_layout.pug
block content 
	include ./components/user_navbar.pug
	.container-fluid.container-login
		.row
			.col-md-2.col-lg-2.col-xl-2
				.box-decorate
					.element-decorate
						img(src='./assets/img/bamboo.png', alt='')
			.col-md-8.col-lg-8.col-xl-8
				.box-form
					.head-form
						h2  &Dstrok;&abreve;ng Nh&#x1EAD;p 
					.body-form
						form(id='' method="POST")
							.box-input
								input.input-effect-username(type='text', name='username', placeholder='Tên đăng nhập', autocomplete='off', value= value ? value.username : '')
