	include layout/script.pug
	script. 
		var list = document.querySelectorAll('.list');
		list.forEach(item => {
		var name = xoa_dau(item.innerHTML);
		var id = item.getAttribute('href');
		item.setAttribute('href',`/${name}/${id}`)
		})